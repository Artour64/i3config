# Create Log out, Reboot, Poweroff bindings
mode "Exit (L)ogout, (R)eboot, (P)oweroff" {
        bindsym $mod+r exec systemctl reboot
        bindsym $mod+l exit
        bindsym $mod+p exec systemctl poweroff

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

#bindsym $mod+Shift+e mode "Exit (L)ogout, (R)eboot, (P)oweroff"

bindsym $mod+Shift+e exec ~/mysh/exit.sh

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        #bindsym j resize shrink width 10 px or 10 ppt
        #bindsym k resize grow height 10 px or 10 ppt
        #bindsym l resize shrink height 10 px or 10 ppt
        #bindsym semicolon resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command i3status
        bindsym button4 nop
    	bindsym button5 nop
}

bindsym $mod+Tab exec ~/mysh/center-mouse-window

mode "mouse" {
	bindsym $mod+Tab exec ~/mysh/center-mouse-window

	#move mouse to active window (middle)
	bindsym $mod+Tab exec ~mysh/center-mouse-window

	#mouse click left, right, middle
	bindsym $mod+Mod1+Left exec xdotool click 1
	bindsym $mod+Mod1+Right exec xdotool click 3
	
	bindsym $mod+Mod1+Up exec xdotool click 2
	bindsym $mod+Mod1+Down exec xdotool click 2
	
	#mouse scroll x1
	bindsym $mod+Shift+Mod1+Up exec xdotool click 4
	bindsym $mod+Shift+Mod1+Down exec xdotool click 5
	bindsym $mod+Shift+Mod1+Left exec xdotool click 6
	bindsym $mod+Shift+Mod1+Right exec xdotool click 7
	
	#mouse scroll x5
	bindsym $mod+Control+Mod1+Up exec xdotool click --repeat 5 --delay 0 4
	bindsym $mod+Control+Mod1+Down exec xdotool click --repeat 5 --delay 0 5
	bindsym $mod+Control+Mod1+Left exec xdotool click --repeat 5 --delay 0 6
	bindsym $mod+Control+Mod1+Right exec xdotool click --repeat 5 --delay 0 7
	
	#mouse move (10 pixels)
	bindsym $mod+Left exec xdotool mousemove_relative -- -10 0
	bindsym $mod+Down exec xdotool mousemove_relative -- 0 10
	bindsym $mod+Up exec xdotool mousemove_relative -- 0 -10
	bindsym $mod+Right exec xdotool mousemove_relative -- 10 0
	
	bindsym $mod+mod2+KP_4 exec xdotool mousemove_relative -- -10 0
	bindsym $mod+mod2+KP_2 exec xdotool mousemove_relative -- 0 10
	bindsym $mod+mod2+KP_8 exec xdotool mousemove_relative -- 0 -10
	bindsym $mod+mod2+KP_6 exec xdotool mousemove_relative -- 10 0
	
	bindsym $mod+mod2+KP_1 exec xdotool mousemove_relative -- -10 10
	bindsym $mod+mod2+KP_3 exec xdotool mousemove_relative -- 10 10
	bindsym $mod+mod2+KP_7 exec xdotool mousemove_relative -- -10 -10
	bindsym $mod+mod2+KP_9 exec xdotool mousemove_relative -- 10 -10
	
	#mouse move slow (1 pixel)
	bindsym $mod+Shift+Left exec xdotool mousemove_relative -- -1 0
	bindsym $mod+Shift+Down exec xdotool mousemove_relative -- 0 1
	bindsym $mod+Shift+Up exec xdotool mousemove_relative -- 0 -1
	bindsym $mod+Shift+Right exec xdotool mousemove_relative -- 1 0
	
	bindsym $mod+Shift+mod2+KP_4 exec xdotool mousemove_relative -- -1 0
	bindsym $mod+Shift+mod2+KP_2 exec xdotool mousemove_relative -- 0 1
	bindsym $mod+Shift+mod2+KP_8 exec xdotool mousemove_relative -- 0 -1
	bindsym $mod+Shift+mod2+KP_6 exec xdotool mousemove_relative -- 1 0
	
	bindsym $mod+Shift+mod2+KP_1 exec xdotool mousemove_relative -- -1 1
	bindsym $mod+Shift+mod2+KP_3 exec xdotool mousemove_relative -- 1 1
	bindsym $mod+Shift+mod2+KP_7 exec xdotool mousemove_relative -- -1 -1
	bindsym $mod+Shift+mod2+KP_9 exec xdotool mousemove_relative -- 1 -1
	
	
	#mouse move fast (100 pixel)
	bindsym $mod+Control+Left exec xdotool mousemove_relative -- -100 0
	bindsym $mod+Control+Down exec xdotool mousemove_relative -- 0 100
	bindsym $mod+Control+Up exec xdotool mousemove_relative -- 0 -100
	bindsym $mod+Control+Right exec xdotool mousemove_relative -- 100 0
	
	bindsym $mod+Control+mod2+KP_4 exec xdotool mousemove_relative -- -100 0
	bindsym $mod+Control+mod2+KP_2 exec xdotool mousemove_relative -- 0 100
	bindsym $mod+Control+mod2+KP_8 exec xdotool mousemove_relative -- 0 -100
	bindsym $mod+Control+mod2+KP_6 exec xdotool mousemove_relative -- 100 0
	
	bindsym $mod+Control+mod2+KP_1 exec xdotool mousemove_relative -- -100 100
	bindsym $mod+Control+mod2+KP_3 exec xdotool mousemove_relative -- 100 100
	bindsym $mod+Control+mod2+KP_7 exec xdotool mousemove_relative -- -100 -100
	bindsym $mod+Control+mod2+KP_9 exec xdotool mousemove_relative -- 100 -100
	
	
	
	# back to normal
	bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+c mode "default"
}
bindsym $mod+c mode "mouse"

